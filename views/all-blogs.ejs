    <h1>All Blog Posts</h1>
    <div class="card-container">
        <% blogPosts.forEach(post => { %>
            <div class="card">
                <img src="/uploads/<%= post.image %>" alt="<%= post.title %>">
                <h2><%= post.title %></h2>
                <p><%= post.description %></p>
    
                <div class="rating">
                    <input type="radio" id="star1-<%= post._id %>" name="rating-<%= post._id %>" value="1">
                    <label for="star1-<%= post._id %>">&#9733;</label>
                    <input type="radio" id="star2-<%= post._id %>" name="rating-<%= post._id %>" value="2">
                    <label for="star2-<%= post._id %>">&#9733;</label>
                    <input type="radio" id="star3-<%= post._id %>" name="rating-<%= post._id %>" value="3">
                    <label for="star3-<%= post._id %>">&#9733;</label>
                    <input type="radio" id="star4-<%= post._id %>" name="rating-<%= post._id %>" value="4">
                    <label for="star4-<%= post._id %>">&#9733;</label>
                    <input type="radio" id="star5-<%= post._id %>" name="rating-<%= post._id %>" value="5">
                    <label for="star5-<%= post._id %>">&#9733;</label>
                </div>
            </div>
        <% }); %>
    </div>
    