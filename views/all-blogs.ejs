    <style>
        /* CSS for the card view */
.card-container {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: space-around;
}

.card {
    width: 300px;
    border: 1px solid #ccc;
    padding: 20px;
    border-radius: 5px;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
}

.card img {
    max-width: 100%;
    height: auto;
}

.card h2 {
    font-size: 18px;
    margin: 10px 0;
}

.card p {
    font-size: 14px;
    margin: 0;
}


/* CSS for the star rating system */
.rating {
    display: inline-flex; /* Use flexbox to arrange elements horizontally */
    flex-direction: row-reverse; /* Reverse the direction to make stars go from left to right */
    align-items: center; /* Center stars vertically */
}

.rating input {
    display: none;
}

.rating label {
    font-size: 24px;
    color: #ccc;
    cursor: pointer;
    transition: color 0.2s; /* Add a transition for smooth color change */
}

.rating label:hover,
.rating input:checked ~ label {
    color: #ffcc00; /* Change the color on hover or when checked */
}

/* Glowing effect animation */
@keyframes glow {
    0%, 100% {
        color: #ccc; /* Start and end with the default color */
        text-shadow: none; /* No shadow at the beginning and end */
    }
    50% {
        color: #ffcc00; /* Glow at 50% of the animation */
        text-shadow: 0 0 5px rgba(255, 204, 0, 0.8); /* Add a shadow for the glow effect */
    }
}




