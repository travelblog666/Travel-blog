<!-- 'a.ejs' template -->

<!DOCTYPE html>
<html lang="en">
    <header>
        <h1>Blog-List</h1>
    </header>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Blog Posts</title>
    <style>
        /* CSS for the card view */

.card-container {
    padding-top: 40px;
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: space-around;
}
.all{
    padding:50px;
}
header {
    background-color: #007bff;
    color: #fff;
    padding: 20px;
    text-align: center;
}
*{
    margin: 0;
    padding: 0;
}

.card {
    
    width: 300px;
    border: 1px solid #ccc;
    padding: 20px;
    border-radius: 5px;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
}

.card img {
    max-width: 100%;
    height: auto;
}

.card h2 {
    font-size: 18px;
    margin: 10px 0;
}

.card p {
    font-size: 14px;
    margin: 0;
}

/* CSS for the star rating system */
/* CSS for the star rating system with glowing stars */
.rating {
    display: inline-block;
}

.rating input {
    display: none;
}

.rating label {
    font-size: 24px;
    color: #ccc;
    cursor: pointer;
    transition: color 0.2s; /* Add a transition for smooth color change */
}

.rating label:hover,
.rating input:checked ~ label {
    color: #ffcc00; /* Change the color on hover or when checked */
}

/* Glowing effect animation */
@keyframes glow {
    0%, 100% {
        color: #ccc; /* Start and end with the default color */
        text-shadow: none; /* No shadow at the beginning and end */
    }
    50% {
        color: #ffcc00; /* Glow at 50% of the animation */
        text-shadow: 0 0 5px rgba(255, 204, 0, 0.8); /* Add a shadow for the glow effect */
    }
}
nav {
    background-color: #333;
    color: #fff;
    padding: 10px;
}

nav ul {
    list-style: none;
    padding: 0;
}

nav ul li {
    display: inline;
    margin-right: 20px;
}

nav ul li a {
    text-decoration: none;
    color: #fff;
    font-weight: bold;
}




    </style>
</head>
<body>
    <nav>
        <!-- Add navigation links specific to the admin module if needed -->
        <ul>
            
            <li><a href="../html/admin-users.html">Users</a></li>
            
           <li> <a href="/a">Blogs</a>
           </li>
           <li><a href="../html/send-mail.html">Send mail</a></li>
            <li><button style="margin-left: 100px;" onclick="location.href='/logout'">Logout</button></li>
           

            <!-- Add more admin-specific links as needed -->
        </ul>
    </nav>
    <h1 class="all">All Blog Posts</h1>
    <div class="card-container">
        <% blogPosts.forEach(post => { %>
            <div class="card">
                <img src="/uploads/<%= post.image %>" alt="<%= post.title %>">
                <h2><%= post.title %></h2>
                <p><%= post.description %></p>
    
                <!-- Add a "Delete" button with a link to the delete route -->
                <a href="/delete/<%= post._id %>" class="delete-button">Delete</a>
            </div>
        <% }); %>
    </div>
</body>
</html>
